{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}
<section class="author-card">
    {{#if image}}
        <img class="author-profile-image" src="{{image}}" alt="{{name}}" />
    {{else}}
        <span class="avatar-wrapper">{{> "icons/avatar"}}</span>
    {{/if}}
    <section class="author-card-content">
        <h4 class="author-card-name"><a href="{{url}}">{{name}}</a></h4>
        {{#if bio}}
            <p>{{bio}}</p>
        {{else}}
            <p>Read <a href="{{url}}">more posts</a> by this author.</p>
        {{/if}}
    </section>
</section>
<div class="mobile-flex-break"></div>
<div class="post-full-footer-right">
    <a class="author-card-button" href="/author/{{slug}}">Read More</a>
</div>
{{/author}}
